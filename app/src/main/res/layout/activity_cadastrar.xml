<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/azul"
    tools:context=".CadastroActivity">

    <TextView
        android:id="@+id/txtConta"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Crie sua conta"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/preto"
        android:textStyle="bold"
        android:background="@color/branca"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite seu nome:"
        android:textColor="@color/branca"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/edtNomeCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/edit_redondo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite seu email:"
        android:textColor="@color/branca"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/edtEmailCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/edit_redondo"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite sua senha:"
        android:textColor="@color/branca"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorPrimary"
        >
    <EditText
        android:id="@+id/edtSenhaCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/edit_redondo"
        />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirme sua senha:"
        android:textColor="@color/branca"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorPrimary"
        >
    <EditText
        android:id="@+id/edtConfirmaCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/edit_redondo"
        />
</android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnCadastrarCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Cadastrar"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botao_redondo"
        android:textColor="@color/azul"
        android:textStyle="bold"/>


</LinearLayout>